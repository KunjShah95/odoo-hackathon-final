# Backend environment variables
# Copy to .env and fill in values

PORT=5000
NODE_ENV=development

# Database (PostgreSQL)
# Option A: Single URL
DATABASE_URL=postgres://user:password@localhost:5432/globetrotter
# Option B: Individual fields (used if DATABASE_URL not set)
DB_USER=postgres
DB_HOST=localhost
DB_NAME=globetrotter
DB_PASSWORD=postgres
DB_PORT=5432

# Auth/JWT
JWT_SECRET=change_me_super_secret

# External APIs (free tiers)
# Overpass/Nominatim (OSM) require no API key and are used by /places and /geo
OPENWEATHER_API_KEY=your_openweather_key
HUGGINGFACE_API_KEY=your_huggingface_token
# Optional: choose a specific HF model; default is gpt2 if omitted
# HUGGINGFACE_MODEL=tiiuae/falcon-7b-instruct
